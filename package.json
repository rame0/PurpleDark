{
    "name": "rame0-dark-theme",
    "description": "Dark purple theme for Ghost. With some dracula colors.",
    "version": "0.2.0",
    "engines": {
        "ghost": ">=5.0.0"
    },
    "license": "MIT",
    "screenshots": {
        "desktop": "assets/screenshot-desktop.png"
    },
    "scripts": {
        "dev": "rollup -c --environment BUILD:development -w",
        "build": "rollup -c --environment BUILD:production",
        "zip": "npm run build && bestzip $npm_package_name.zip assets/* partials/* members/* *.hbs package.json",
        "test": "gscan .",
        "pretest": "npm run build"
    },
    "author": {
        "name": "Ramil Aliyakberov a.k.a. RAMe0",
        "email": "me@rame0.ru",
        "url": "https://www.rame0.ru"
    },
    "gpm": {
        "type": "theme",
        "categories": [
            "Dark",
            "Blog"
        ]
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/rame0/ghost-dark-theme.git"
    },
    "bugs": "https://github.com/rame0/ghost-dark-theme/issues",
    "contributors": [
        {
            "name": "Ghost Foundation",
            "url": "https://github.com/TryGhost/Starter/graphs/contributors"
        },
        {
            "name": "Ramil Aliyakberov a.k.a. RAMe0",
            "url": "https://www.rame0.ru",
            "email": "me@rame0.ru"
        }
    ],
    "devDependencies": {
        "@babel/core": "^7.21.0",
        "@babel/preset-env": "^7.20.2",
        "@rollup/plugin-babel": "^6.0.3",
        "@rollup/plugin-commonjs": "^24.0.1",
        "@rollup/plugin-node-resolve": "^15.0.1",
        "@rollup/plugin-terser": "^0.4.0",
        "bestzip": "^2.2.1",
        "gscan": "^4.36.1",
        "highlight.js": "^11.7.0",
        "postcss": "^8.4.21",
        "postcss-import": "^15.1.0",
        "postcss-preset-env": "^8.0.1",
        "rollup": "^3.18.0",
        "rollup-plugin-livereload": "^2.0.5",
        "rollup-plugin-postcss": "^4.0.2"
    },
    "browserslist": [
        "defaults"
    ],
    "config": {
        "card_assets": true,
        "posts_per_page": 15,
        "image_sizes": {
            "xxs": {
                "width": 30
            },
            "xs": {
                "width": 100
            },
            "s": {
                "width": 300
            },
            "m": {
                "width": 600
            },
            "l": {
                "width": 1200
            },
            "xl": {
                "width": 2000
            }
        },
        "custom": {
            "layout": {
                "type": "select",
                "options": [
                    "Full-width",
                    "1220px",
                    "960px"
                ],
                "default": "1220px"
            }
        }
    },
    "type": "module"
}
