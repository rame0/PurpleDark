<aside class="gh-sidebar">
    {{#get "authors" limit=1 }}
        {{#foreach authors}}

            <section class="author widget">
                <div class="avatar">
                    <a href="{{url}}" class="thumb">
                <span class="image"
                      style="background-image: url('{{profile_image}}')"></span>
                    </a>
                </div>
                <div class="info">
                    <h4 class="title small author-name gradient-effect no-margin">
                        <a href="{{url}}">{{name}}</a>
                    </h4>

                    <p class="founder"></p>

                    <div class="social">
                        {{#if website}}
                            <a href="{{website}}" target="_blank" rel="nofollow noopener"
                               title="Сайт: {{website}}">
                                {{> "icons/globe"}}
                            </a>
                        {{/if}}
                        {{#if twitter}}
                            <a href="https://twitter.com/{{twitter}}" target="_blank"
                               rel="nofollow noopener" title="Подписывайтесь в Twitter">
                                {{> "icons/twitter"}}
                            </a>
                        {{/if}}
                        <a href="https://t.me/rame0ru" target="_blank"
                           rel="nofollow noopener" title="Подписывайтесь в Twitter">
                            {{> "icons/telegram"}}
                        </a>
                    </div>
                </div>
                <p>{{bio}}</p>
            </section>
        {{/foreach}}
    {{/get}}
    <section class="latest widget">
        <h4>Свежие записи</h4>
        {{#get "posts" limit="5" order="published_at DESC" as |short_posts|}}
            {{#foreach short_posts}}
                {{> "card-short"}}
            {{/foreach}}
        {{/get}}
    </section>

    {{! Get all tags and order them by post count }}

    <section class="tags widget">
        <h4>Теги</h4>
        <div class="tag-cloud">
            {{#get "tags" limit="15" include="count.posts" order="count.posts desc"}}
                {{#foreach tags}}
                    <a href="{{url}}">{{name}} ({{count.posts}})</a>
                {{/foreach}}
            {{/get}}
        </div>
    </section>
</aside>